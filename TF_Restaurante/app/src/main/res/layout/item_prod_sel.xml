<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginLeft="3dp"

    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"

    >


    <ImageView
        android:id="@+id/img_total"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"


        />

    <TextView
        android:id="@+id/cant_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="cantidad"
        android:text=""
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/img_total"
        app:layout_constraintStart_toEndOf="@+id/img_total"
        app:layout_constraintTop_toTopOf="@+id/img_total" />

    <TextView
        android:id="@+id/titulo_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:hint="titulo"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cant_item"
        app:layout_constraintStart_toEndOf="@+id/cant_item"
        app:layout_constraintTop_toTopOf="@+id/cant_item" />

    <TextView
        android:id="@+id/prec_uni_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="1dp"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/titulo_item"


        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/titulo_item" />

    <TextView
        android:id="@+id/valor_tot_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="1dp"
        android:gravity="end"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/prec_uni_item"


        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/prec_uni_item" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="211dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="285dp" />


</androidx.constraintlayout.widget.ConstraintLayout>